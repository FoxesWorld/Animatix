{
  "animationName": "imageAnimation",
  "imagePath": "img/diamond.png",
  "repeat": true,
  "bounds": {
    "x": 100,
    "y": 100,
    "width": 350,
    "height": 350
  },
  "phases": [
    {
      "imageEffects": ["resize"],
      "name": "resize",
      "duration": 800,
      "effectParams": {
        "resize": {
          "startWidth": 290,
          "startHeight": 290,
          "endWidth": 100,
          "endHeight": 100,
          "resizeType": "SCALE_TO_FIT"
        }
      }
    },
    {
      "imageEffects": ["borderHighlight"],
      "name": "borderHighlight",
      "duration": 1200,
      "effectParams": {
        "borderHighlight":
          {
            "borderColor": "#FF5733" ,
            "shadowColor": "#FFFFFF" ,
            "borderSize": 1,
            "shadowSize": 9
          }
      }
    },
    {
      "imageEffects": ["crack"],
      "duration": 1000
    },
    {
      "imageEffects": ["decay"],
      "duration": 1000
    }
  ]
}
